generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  price      Float
  categories String[]
  imageKey   String
  active     Boolean  @default(true)
}

model Day {
  id        String  @id @default(cuid())
  name      String
  dayOfWeek Int
  openTime  String
  closeTime String
  open      Boolean @default(true)
}

model ClosedDay {
  id   String   @id @default(cuid())
  date DateTime @unique
}

model Booking {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  people    String
  mobile    String
  email     String
  preorder  Boolean
  dateTime  DateTime
}

model Preorder {
  id        String   @id @default(cuid())
  bookingId String
  item      String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
